<body>
    <div class="container">
        <div class="countdown-container">
            <h1>大奇你怎么还不开播</h1>
            <div class="countdown">
                <div class="time-box">
                    <div class="number" id="hours">00</div>
                    <div class="label">小时</div>
                </div>
                <div class="time-box">
                    <div class="number" id="minutes">00</div>
                    <div class="label">分钟</div>
                </div>
                <div class="time-box">
                    <div class="number" id="seconds">00</div>
                    <div class="label">秒</div>
                </div>
            </div>
            <div class="message">不开播就鬼出去！</div>
        </div>
        
        <div class="controls">
            <button id="refreshBtn">刷新</button>
            <button id="themeBtn">开灯</button>
        </div>
    </div>
<script>
        // 设置开播时间（这里设置为当前时间+8小时）
        const liveTime = new Date();
        liveTime.setHours(liveTime.getHours() + 8);
        
        // 更新倒计时
        function updateCountdown() {
            const now = new Date();
            const diff = liveTime - now;
            
            if (diff <= 0) {
                document.getElementById('hours').textContent = '00';
                document.getElementById('minutes').textContent = '00';
                document.getElementById('seconds').textContent = '00';
                document.querySelector('.message').textContent = '大奇开播啦！快去看直播！';
                return;
            }
            
            const hours = Math.floor(diff / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
        }
        
        function createBarrage() {
            const barrage = document.createElement('div');
            barrage.className = 'barrage';
            barrage.textContent = '大奇你怎么还不开播';
            
            const colors = [
                '#FF69B4', '#7B68EE', '#00BFFF', '#FFD700', 
                '#FF6347', '#00FA9A', '#FFA500', '#BA55D3'
            ];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            barrage.style.color = randomColor;
            
            const size = Math.floor(Math.random() * 20) + 20;
            barrage.style.fontSize = `${size}px`;
            
            const top = Math.random() * 90;
            barrage.style.top = `${top}%`;
            
            const duration = Math.floor(Math.random() * 20) + 15;
            barrage.style.animationDuration = `${duration}s`;
            
            document.body.appendChild(barrage);
    setTimeout(() => {
                barrage.remove();
            }, duration * 1000);
        }
        
        function initBarrages() {

            const existingBarrages = document.querySelectorAll('.barrage');
            existingBarrages.forEach(barrage => barrage.remove());
            
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    createBarrage();
                }, i * 500);
            }
        }
        
        let isDarkTheme = true;
        function toggleTheme() {
            const body = document.body;
            const countdownContainer = document.querySelector('.countdown-container');
            
            if (isDarkTheme) {
                body.style.background = 'linear-gradient(135deg, #a8edea, #fed6e3)';
                countdownContainer.style.background = 'rgba(255, 255, 255, 0.8)';
                countdownContainer.style.borderColor = '#4A90E2';
                countdownContainer.style.boxShadow = '0 0 30px rgba(74, 144, 226, 0.5)';
                
                document.querySelectorAll('.time-box').forEach(box => {
                    box.style.background = 'rgba(255, 255, 255, 0.9)';
                    box.style.borderColor = '#4A90E2';
                    box.style.boxShadow = '0 0 15px rgba(74, 144, 226, 0.4)';
                });
                
                document.querySelector('h1').style.color = '#4A90E2';
                document.querySelector('h1').style.textShadow = '0 0 15px rgba(74, 144, 226, 0.8)';
                
                document.querySelectorAll('.number').forEach(num => {
                    num.style.color = '#4A90E2';
                    num.style.textShadow = '0 0 10px rgba(74, 144, 226, 0.8)';
                });
            } else {
                body.style.background = 'linear-gradient(135deg, #1a1a2e, #16213e, #0f3460)';
                countdownContainer.style.background = 'rgba(0, 0, 0, 0.7)';
                countdownContainer.style.borderColor = '#ff69b4';
                countdownContainer.style.boxShadow = '0 0 30px rgba(255, 105, 180, 0.5)';
                
                document.querySelectorAll('.time-box').forEach(box => {
                    box.style.background = 'rgba(0, 0, 0, 0.8)';
                    box.style.borderColor = '#ff69b4';
                    box.style.boxShadow = '0 0 15px rgba(255, 105, 180, 0.4)';
                });
                
                document.querySelector('h1').style.color = '#ff69b4';
                document.querySelector('h1').style.textShadow = '0 0 15px rgba(255, 105, 180, 0.8)';
                
                document.querySelectorAll('.number').forEach(num => {
                    num.style.color = '#ff69b4';
                    num.style.textShadow = '0 0 10px rgba(255, 105, 180, 0.8)';
                });
            }
            
            isDarkTheme = !isDarkTheme;
        }
        
        document.getElementById('refreshBtn').addEventListener('click', initBarrages);
        document.getElementById('themeBtn').addEventListener('click', toggleTheme);
        
        updateCountdown();
        setInterval(updateCountdown, 1000);
        initBarrages();
        setInterval(createBarrage, 1000);
    </script>
</body>
</html>
